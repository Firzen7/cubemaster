<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.firzen.cubemaster2">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PreviewActivity"
            android:label="@string/title_activity_preview"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.DetectActivity"
            android:label="@string/title_activity_detect"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.CubeActivity"
            android:label="@string/title_activity_cube"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.help.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ColorsActivity"
            android:label="@string/title_activity_colors"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.help.SolvingHelpActivity"
            android:label="@string/title_activity_solving_help"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.help.UsageTipsActivity"
            android:label="@string/title_activity_usage_tips"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.help.CheatsheetActivity"
            android:label="@string/title_activity_cheatsheet"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.help.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>

    </application>

</manifest>